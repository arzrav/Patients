<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/list_item_patient_edit_card_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/description_edit_icon"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ic_edit"/>

    <ImageButton
        android:id="@+id/list_item_patient_delete_card_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/list_item_patient_edit_card_image_button"
        android:layout_centerVertical="true"
        android:contentDescription="@string/description_delete_icon"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/list_item_patient_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/list_item_patient_delete_card_image_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        tools:text="ФИО Пациента"/>

    <TextView
        android:id="@+id/list_item_patient_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/list_item_patient_delete_card_image_button"
        android:layout_below="@id/list_item_patient_title_text_view"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="4dp"
        tools:text="Дата рождения"/>

</RelativeLayout>